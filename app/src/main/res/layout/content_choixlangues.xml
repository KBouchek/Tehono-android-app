<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_choixlangues"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="k.tehono.org.tehono.Choixlangues"
    tools:showIn="@layout/activity_choixlangues">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proposer une traduction du mot :"
        android:padding="5dp"
        android:id="@+id/tutu"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutu"
        android:padding="5dp"
        android:id="@+id/mot"
        android:textSize="19dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tutu"
        android:textColor="@android:color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="en"
        android:padding="5dp"
        android:id="@+id/motxx"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mot"
        android:textColor="@android:color/white"
        />
    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="45dp"
        android:layout_below="@+id/motxx"
        />


    <Button
        android:id="@+id/testbutton"

        android:text="Traduire"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonshapenext"
        android:shadowColor="#030EA8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        />


</RelativeLayout>
